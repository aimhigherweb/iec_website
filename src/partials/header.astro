---
import SVG from "@parts/svg.astro";

import main from "../../content/menus/main-menu.json";
---

<style lang="scss">
	header {
		position: fixed;
		top: 0;
		z-index: 20;
		width: 100vw;
		left: 0;
		right: 0;
		color: var.$white;
		padding: 20px;
		display: flex;
		justify-content: space-between;
		align-items: center;
		background: rgba(var.$secondary, 0.6);
	}

	.logo {
		height: 50px;
		width: auto;
		color: var.$white;
	}

	nav {
		position: relative;
		color: var.$secondary;

		a {
			background: var.$white;
			padding: 15px 20px;
			font-weight: 600;
			font-family: var.$font_headings;

			&:hover {
				background: var.$secondary;
				color: var.$white;
			}
		}

		li {
			&:last-child {
				a {
					border-radius: 0 0 10px 10px;
				}
			}

			&:first-child {
				a {
					border-radius: 10px 10px 0 0;
				}
			}
		}

		&:global(.open) {
			ul {
				display: block;
			}

			.hamburger {
				.open {
					display: none;
				}

				.close {
					display: block;
				}
			}
		}
	}

	ul {
		min-width: 200px;
		max-width: 400px;
		position: absolute;
		top: 105%;
		border-radius: 10px;
		right: 0;
		text-align: right;
		display: none;
	}

	.hamburger {
		padding: 10px;
		background: none;
		border-color: transparent;
		font-size: 1.8em;
		display: flex;
		justify-content: center;
		align-items: center;
		line-height: 1;

		svg {
			height: 1em;
			width: auto;
		}

		.close {
			display: none;
		}
	}

	@media (min-width: 50em) {
		header {
			padding: 20px 40px;
		}
	}

	@media (min-width: 60em) {
		header {
			padding: 20px 5vw;
		}

		.logo {
			flex-shrink: 1;
		}

		.hamburger {
			display: none;
		}

		nav {
			color: var.$white;

			&:global(.open) {
				ul {
					display: flex;
				}
			}

			a {
				background: none;
				border-radius: 0;
				padding: 10px;

				&:hover {
					background: none;
					color: inherit;
					text-decoration: underline;
					text-underline-offset: 4px;
					text-decoration-thickness: 3px;
					text-decoration-color: var.$primary;
				}
			}
		}

		ul {
			display: flex;
			position: static;
			max-width: unset;
		}
	}

	@media (min-width: 70em) {
		nav {
			a {
				padding: 10px 15px;
			}
		}
	}

	@media (min-width: 80em) {
		header {
			padding: 20px calc(50vw - 600px);
		}
	}
</style>

<header>
	<a href="/"
		><SVG name="logo.svg" class="logo" /><span class="sr-only"
			>Home page</span
		></a
	>
	<nav id="main-menu">
		<button class="hamburger" onclick="toggleMenu()">
			<SVG name="icons/hamburger.svg" class="open" />
			<SVG name="icons/close.svg" class="close" />
			<span class="sr-only">Toggle Menu</span>
		</button>
		<ul>
			{
				main.items.map(({ url, text }) => (
					<li>
						<a href={url}>{text}</a>
					</li>
				))
			}
		</ul>
	</nav>
</header>

<script is:inline>
	const toggleNav = (menuSelector) => {
		const menu = document.querySelector(menuSelector);
		if (menu.classList.contains("open")) {
			menu.classList.remove("open");
		} else {
			menu.classList.add("open");
		}
	};

	const toggleMenu = () => {
		toggleNav("nav#main-menu");
	};
</script>

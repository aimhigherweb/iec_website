---
const {logos} = Astro.props
---

<style>
	ul {
		display: flex;
		flex-wrap: wrap;
		list-style: none;
		justify-content: center;
		margin: -20px;
		align-items: center;
		padding: 0;
		width: 100%;
	}

	li {
		flex: 1 0 auto;
		margin: 20px;
		padding: 0;
		width: 200px;
		max-height: 200px;
		max-width: 300px;
	}

	a {
		display: block;
	}
	
	img {
		width: 100%;
		height: 100%;
		object-fit: contain;
	}

</style>

<ul>{logos.map(({image, url}) => (
	<li>
		<a
			href={url}
			target="_blank"
			rel="nofollow"
		>
			<img src={image} alt={`Logo for ${url}`} />
		</a>	
	</li>
))}</ul>
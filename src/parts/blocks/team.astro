---
import Staff from "@parts/staff.astro";

const { heading, content, staff } = Astro.props;

const allStaff = await Astro.glob("../../../content/author/*.md");

const profiles = allStaff.filter((profile) =>
	staff.includes(profile.frontmatter.title)
);
---

<style lang="scss">
	.content {
		max-width: 800px;
		margin: 20px auto;
	}
</style>

<>
	<h2>{heading}</h2>
	<Staff profiles={profiles} />
	<div set:html={content.html} class="content" />
</>
